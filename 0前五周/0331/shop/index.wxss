* {
  margin: 0;
  padding: 0;
  list-style: none;
}
html,
body {
  background-color: #f5f5f5;
}
.shop_box {
  width: 1200px;
  margin: auto;
}
.shop_box .sort_btn_box {
  background-color: #fff;
  overflow: hidden;
}
.shop_box .sort_btn_box li {
  float: left;
  margin: 0 20px;
  height: 50px;
  line-height: 50px;
  cursor: pointer;
  user-select: none;
}
.shop_box .sort_btn_box li:nth-child(1) {
  margin: 0 30px;
}
.shop_box .phone_list_box {
  margin-top: 30px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.shop_box .phone_list_box > li.li_box {
  position: relative;
  width: 230px;
  height: 380px;
  padding: 10px;
  box-sizing: border-box;
  background-color: #fff;
  transition: all 0.2s;
}
.shop_box .phone_list_box > li.li_box .img_box {
  width: 100%;
  height: 200px;
  overflow: hidden;
}
.shop_box .phone_list_box > li.li_box .img_box img {
  width: 100%;
}
.shop_box .phone_list_box > li.li_box h2 {
  font-size: 15px;
  padding: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shop_box .phone_list_box > li.li_box .price_box {
  padding: 10px;
}
.shop_box .phone_list_box > li.li_box .price_box .price {
  color: #ff0000;
  font-size: 20px;
}
.shop_box .phone_list_box > li.li_box .price_box .select_icon {
  font-size: 12px;
  border: 1px solid salmon;
  border-radius: 20px;
  color: salmon;
}
.shop_box .phone_list_box > li.li_box .feature_box {
  overflow: hidden;
}
.shop_box .phone_list_box > li.li_box .feature_box > li {
  border: 1px solid #ff0000;
  float: left;
  margin-right: 5px;
  color: #ff0000;
  font-size: 12px;
  padding: 0 5px;
}
.shop_box .phone_list_box > li.li_box .comment_box {
  position: absolute;
  bottom: 20px;
  font-size: 12px;
  color: #ccc;
}
.shop_box .phone_list_box > li.li_box .comment_box span {
  margin-right: 5px;
}
.shop_box .phone_list_box > li.li_box:hover {
  box-shadow: 0px 3px 6px 3px #ccc;
  transform: translateY(-5px);
}
.shop_box .phone_list_box > li {
  width: 230px;
  margin-bottom: 10px;
}
